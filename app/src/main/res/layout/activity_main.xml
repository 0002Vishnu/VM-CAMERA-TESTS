<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">


    <SurfaceView
        android:id="@+id/surfaceViewPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/camera_ui_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/top_options_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/mode_default_options_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <ImageButton
                        android:id="@+id/btn_setting"
                        style="@style/TopOptionButton"
                        android:contentDescription="Settings"
                        android:src="@drawable/rounded_settings_24" />

                    <ImageButton
                        android:id="@+id/btn_flash"
                        style="@style/TopOptionButton"
                        android:contentDescription="Flash"
                        android:src="@drawable/rounded_flash_auto_24" />

                    <ImageButton
                        android:id="@+id/btn_timer"
                        style="@style/TopOptionButton"
                        android:contentDescription="Timer"
                        android:src="@drawable/rounded_clock_24" />

                    <ImageButton
                        android:id="@+id/btn_size"
                        style="@style/TopOptionButton"
                        android:contentDescription="Timer"
                        android:src="@drawable/rounded_fullscreen_24" />

                    <ImageButton
                        android:id="@+id/btn_resolution"
                        style="@style/TopOptionButton"
                        android:contentDescription="Size"
                        android:src="@drawable/rounded_hd_24" />

                    <ImageButton
                        android:id="@+id/btn_filter"
                        style="@style/TopOptionButton"
                        android:contentDescription="Filter"
                        android:src="@drawable/outline_filter_24" />

                </LinearLayout>

                <include
                    android:id="@+id/extended_flash_options_view"
                    layout="@layout/layout_extended_flash_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <include
                    android:id="@+id/extended_timer_options_view"
                    layout="@layout/layout_extended_timer_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <include
                    android:id="@+id/extended_filter_options_view"
                    layout="@layout/layout_extended_filter_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <include
                    android:id="@+id/extended_resolution_options_view"
                    layout="@layout/layout_extended_resolution_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <include
                    android:id="@+id/extended_size_options_view"
                    layout="@layout/layout_extended_size_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/bottom_controls_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1AFFFFFF"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <HorizontalScrollView
                    android:id="@+id/mode_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/mode_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/mode_photo"
                            style="@style/CameraModeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PHOTO" />

                        <TextView
                            android:id="@+id/mode_video"
                            style="@style/CameraModeTextSelected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIDEO" />

                        <TextView
                            android:id="@+id/mode_portrait"
                            style="@style/CameraModeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PORTRAIT" />
                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="64dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp">

                    <ImageButton
                        android:id="@+id/gallery_button"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="Gallery"
                        android:src="@android:drawable/ic_menu_gallery" />

                    <ImageButton
                        android:id="@+id/btnClick"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shutter_bg"
                        android:contentDescription="Shutter" />

                    <ImageButton
                        android:id="@+id/switch_camera_button"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="Switch Camera"
                        android:src="@drawable/rounded_flip_camera_android_36" />
                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/compact_control_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#99000000"
                android:padding="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/bottom_controls_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/slider_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Control Level"
                        android:textColor="@android:color/white" />

                    <SeekBar
                        android:id="@+id/control_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>