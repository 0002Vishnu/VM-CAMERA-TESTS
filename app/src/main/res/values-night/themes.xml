    <style name="TopOptionButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="TopOptionSubButton" parent="TopOptionButton">
        <item name="android:tint">#DDDDDD</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="ExtendedOptionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:tint">#FFFFFF</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FilterOptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>
